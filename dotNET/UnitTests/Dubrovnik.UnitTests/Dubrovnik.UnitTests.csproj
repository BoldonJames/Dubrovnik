set "OUT_PATH=$(ProjectDir).."

REM Reflection paths
set "REF_INPUT_FILE=$(TargetDir)Dubrovnik.UnitTests.exe"
set "REF_OUTPUT_PATH=%25OUT_PATH%25"

REM Generator paths
set "GEN_INPUT_FILE=%25REF_OUTPUT_PATH%25\Dubrovnik.UnitTests.xml"
